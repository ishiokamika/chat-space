.flash-box
  .notice
    グループを作成しました。

.side
  .side__header
    %p.user test-user
    %ul.user_menu
      %li.edit_user< 
        =link_to('#') do
          =fa_icon 'edit'
      %li.new_group
        =link_to('#') do
          =fa_icon 'cog'
  .side__groups
    =link_to('#') do
      .group
        %p.group_name test
        %p.group_message まだメッセージがありません

.main
  .main__header
    .current-group
      %h2.current-group__name test
      %ul.member-list Menber：
    =link_to('#') do
      .edit-btn Edit
  .main__messages
    .info
      = render @messages
  .main__form
    = form_for [@group, @message] do |f|
      = f.text_field :content, class: 'input-box', placeholder: 'type a message' 
      .input-text
        = f.label :image, class: 'image-label' do
          = fa_icon 'picture-o', class: 'icon'
          = f.file_field :image, class: 'image-input'
      = f.submit 'Send', class: 'submit-btn'
